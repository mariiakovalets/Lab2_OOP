<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Lab2_oop.AvaloniaApp.Views.ErrorDialog"
        Title="Помилка"
        Width="400" Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="White">
    
    <Grid RowDefinitions="*,Auto" Margin="20">
        

        <StackPanel Grid.Row="0" 
                    Spacing="15"
                    VerticalAlignment="Center">
            <TextBlock Text=" Помилка"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#dc2626"
                       HorizontalAlignment="Center"/>
            <TextBlock Name="TxtErrorMessage"
                       FontSize="14"
                       Foreground="#374151"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
        </StackPanel>
        
<Button Grid.Row="1"
        Content="OK"
        Width="100"
        Height="36"
        Background="#172f47"
        Foreground="White"
        BorderBrush="#172f47"
        BorderThickness="2"
        CornerRadius="6"
        FontSize="14"
        Padding="12,0"
        Cursor="Hand"
        HorizontalAlignment="Center"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        Name="BtnOk"
        Click="BtnOk_Click">
    <Button.Styles>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#0f1f2e"/>
        </Style>
    </Button.Styles>
</Button>
        
    </Grid>
</Window>